[alias]
    # List aliases
    alias = config --get-regexp alias

    # Show list of contributors in descending order by number of commits
    rank = shortlog -sn --no-merges

    # Difftastic
    difft = !"GIT_EXTERNAL_DIFF=difft git diff"

    # Add modified files to latest commit
    oups = !"git add -A -v && git commit --amend -C HEAD"

    # Amend latest commit with currently staged files
    amend = commit --amend --no-edit

    files-ive-edited = !git log --no-merges --name-only --pretty=format: --author='Hamza' | awk 'NF' | sort -u

git ll --author=Hamza.Boutou --name-only

    updated = ls-files --modified

    pushf = push --force-with-lease

    trash = !"git branch --merged | egrep -v '(^\*|master|main|develop)' | xargs git branch -d"

    s = status --short
    l = log --oneline

    ll = log --pretty=format:'%C(auto)%h %>(13)%ar %>(9,trunc)%Cgreen%aL %C(auto)%d %s'
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative

[user]
    name = hboutou
    email = 22304469+hboutou@users.noreply.github.com

[url "git@github.com:"]
	insteadOf = git://github.com/
	insteadOf = https://github.com/

[core]
    editor = vim
    autocrlf = input

[init]
    defaultBranch = main

[branch]
    sort = -committerdate

[tag]
    sort = taggerdate

[diff]  
    algorithm = histogram
    colorMoved = default
    renames = copy
    mnemonicprefix = true

[commit]
    verbose = true

[fetch]
    fsckobjects = true
    prune = true
    prunetags = true

[push]
    default = upstream
    autoSetupRemote = true

[pull]
    ff = only

[merge]
    conflictStyle = zdiff3

[rerere]
    enabled = true

[rebase]
    missingCommitsCheck = error
    updateRefs = true

[transfer]
    fsckobjects = true

[receive]
    fsckobjects = true

[maintenance]
    auto = false
    strategy = incremental
