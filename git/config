[user]
    name = hboutou
    email = 22304469+hboutou@users.noreply.github.com

[core]
    editor = vim
    autocrlf = false

[init]
    defaultBranch = main

[branch]
    sort = -committerdate

[tag]
    sort = taggerdate

[diff]  
    algorithm = histogram
    colorMoved = default
    renames = copy
    mnemonicprefix = true

[commit]
    verbose = true

[fetch]
    fsckobjects = true
    prune = true
    prunetags = true

[push]
    default = upstream
    autoSetupRemote = true

[pull]
    ff = only

[merge]
    conflictStyle = zdiff3

[rerere]
    enabled = true

[rebase]
    missingCommitsCheck = error

[transfer]
    fsckobjects = true

[receive]
    fsckobjects = true

[maintenance]
    auto = false
    strategy = incremental

[alias]
    # List aliases.
    alias = config --get-regexp alias

    # show list of contributors in descending order by number of commits
    rank = shortlog -sn --no-merges

    # difftastic
    difft = !"GIT_EXTERNAL_DIFF=difft git diff"

    # Add modified files to latest commit
    oups = !"git add -A -v && git commit --amend -C HEAD"

    # Amend latest commit with currently staged files
    amend = commit --amend --no-edit

    pushf = push --force-with-lease

    s = status --short
    l = log --oneline

    ll = log --pretty=format:'%C(auto)%h %>(13)%ar %>(9,trunc)%Cgreen%aL %C(auto)%d %s'
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
