	email = 22304469+hboutou@users.noreply.github.com

[url "git@github.com:"]
	insteadOf = git://github.com/
	insteadOf = https://github.com/

[core]
	editor = vim
	autocrlf = input

[apply]
	whitespace = fix

[format]
	pretty = fuller

[blame]
	#ignoreRevsFile = .git-blame-ignore-revs

[init]
	defaultBranch = main

[branch]
	sort = -committerdate

[tag]
	sort = version:refname  # taggerdate

[diff]  
	algorithm = histogram
	colorMoved = default
	colorMovedWS = allow-indentation-change
	renames = copy
	mnemonicprefix = true

[color "diff"]
	whitespace = red reverse

[commit]
	verbose = true

[fetch]
	fsckobjects = true
	prune = true
	prunetags = true

[push]
	default = upstream
	autoSetupRemote = true

[pull]
	ff = only

[merge]
	conflictStyle = zdiff3

[rerere]
	enabled = true

[rebase]
	missingCommitsCheck = error
	updateRefs = true
	autosquash = true

[transfer]
	fsckobjects = true

[receive]
	fsckobjects = true

[maintenance]
	auto = false
	strategy = incremental


