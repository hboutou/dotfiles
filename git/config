[alias]
	alias = config --get-regexp alias
	whoami = config --get-regexp user
	reword = rebase -i HEAD@{u}
	squash = rebase --autosquash HEAD@{u}
	fixup = !git log -n 50 --pretty=format:'%h %s' --no-merges | fzf --no-sort | cut -c -7 | xargs -o git commit --fixup
	root = rev-parse --show-toplevel
	rank = shortlog --summary --numbered --no-merges
	tidy = !git branch --merged | egrep -v '(^\\*|master|main|develop)' | xargs git branch -d
	stat = diff --stat
	difft = !GIT_EXTERNAL_DIFF=difft git diff
	count = rev-list --count --all
	amend = commit --amend --no-edit
	pushf = push --force-with-lease
	blame-ignore = blame --ignore-revs-file .git-blame-ignore-revs
	touchedby = "!f() { git log --no-merges --name-only --pretty=format: --regexp-ignore-case --author=\"$1\" | awk 'NF' | sort -u; }; f"
	contains = branch --all --contains
	authors = !git log --format="%ae:%an:%h:%ar" | awk -F: '!seen[tolower($1)]++' | column -ts:
	updated = ls-files --modified
	ignored = ls-files --ignored --others --exclude-standard
	history = log --follow --pretty=format:'%C(auto)%h %>(13)%ar %>(9,trunc)%Cgreen%aL %C(auto)%d %s' --
	s = status --short
	l = log --oneline
	ll = log --pretty=format:'%C(auto)%h %>(13)%ar %>(9,trunc)%Cgreen%aL %C(auto)%d %s'
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative

[pager]
	rank = false
	updated = false
	ignored = false

[user]
	name = hboutou
	email = 22304469+hboutou@users.noreply.github.com

[url "git@github.com:"]
	insteadOf = git://github.com/
	insteadOf = https://github.com/

[core]
	editor = vim
	autocrlf = input
	whitespace = trailing-space,space-before-tab #,blank-at-eol,blank-at-eof,cr-at-eol

[apply]
	whitespace = fix

[format]
	pretty = fuller

[init]
	defaultBranch = main

[branch]
	sort = -committerdate

[tag]
	sort = version:refname  # taggerdate

[diff]
	algorithm = histogram
	colorMoved = default
	colorMovedWS = allow-indentation-change
	renames = copy
	mnemonicprefix = true

[color "diff"]
	whitespace = red reverse

[commit]
	verbose = true

[fetch]
	fsckobjects = true
	prune = true
	prunetags = true

[push]
	default = simple
	autoSetupRemote = true

[pull]
	ff = only

[merge]
	conflictStyle = zdiff3

[rerere]
	enabled = true

[rebase]
	missingCommitsCheck = error
	updateRefs = true
	autosquash = true

[transfer]
	fsckobjects = true

[receive]
	fsckobjects = true

[maintenance]
	auto = false
	strategy = incremental

