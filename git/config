[alias]
	alias = config --get-regexp alias

	whoami = config --get-regexp user

	# Show list of contributors in descending order by number of commits
	rank = shortlog -sn --no-merges
	
	people = !git log --format='%aE [%aN]' | sort --unique | sort --ignore-case

	last-commit-per-author = !"git log --date=unix --format='%h,%aE,%aN,%cd,\"%ar\"' | sqlite3 :memory: 'CREATE TABLE csv(hash,email,name,epoch,relative_time);' '.import --csv /dev/stdin csv' 'WITH cte AS (SELECT *, ROW_NUMBER() OVER (PARTITION BY email, name ORDER BY epoch DESC) AS rn FROM csv) SELECT hash, relative_time, email, name FROM cte WHERE rn=1 ORDER BY LOWER(email), epoch DESC, name;'"

	difft = !"GIT_EXTERNAL_DIFF=difft git diff"

	amend = commit --amend

	files-ive-edited = !git log --no-merges --name-only --pretty=format: --author='Hamza' | awk 'NF' | sort -u

	updated = ls-files --modified

	pushf = push --force-with-lease

	trash = !git branch --merged | egrep -v '(^\*|master|main|develop)' | xargs git branch -d

	blame-ignore = !git blame --ignore-revs-file .git-blame-ignore-revs

	s = status --short
	l = log --oneline
	ll = log --pretty=format:'%C(auto)%h %>(13)%ar %>(9,trunc)%Cgreen%aL %C(auto)%d %s'
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative

[user]
